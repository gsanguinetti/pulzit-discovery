<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent" android:layout_height="50dp">

    <ImageView
        android:id="@+id/twitterPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_image_view_bkg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp">

        <TextView
            android:id="@+id/twitterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="18sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/twitterAccount"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>